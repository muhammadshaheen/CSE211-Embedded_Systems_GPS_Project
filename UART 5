
#include "tm4c123gh6pm.h"
#include <string.h>




void UART5_Init(void){
  SYSCTL_RCGCUART_R |= 0x20;
	SYSCTL_RCGCGPIO_R |= 0x10;
	UART5_CTL_R &= ~0x01;          //disable UART5
	UART5_IBRD_R = 104;
	UART5_FBRD_R = 11;
	UART5_LCRH_R  |= 0x60;
	UART5_CTL_R |= 0x301;          //enable UART5
	GPIO_PORTE_AFSEL_R |= 0x30;
	GPIO_PORTE_PCTL_R = (GPIO_PORTE_PCTL_R & ~0x00FF0000) | 0x00110000;
	GPIO_PORTE_DEN_R |= 0x30;
}

char Read_Character(void){                          // to read a Character from uart 5
	while((UART5_FR_R & 0x10) != 0);
	return (char)(UART5_DR_R & 0xFF);
}


void Get_GPS_Reading(char* Reading_GPS){
	char character;
	bool cond ;
	int n = 0;
	while(true){
		character = Read_Character();   // reading one char from uart 7
		if(character == 0x2A){          // end writing the reading if char = (*)
			cond = false;
			n = 0;                        //to rest index of arry of char
			break;
		}
		if(cond == true)                // start writing the reading if char = ($)  
		{
     		Reading_GPS[n] = character;			
                 n = n + 1;               			
		}
		if(character == 0x24){           // set the condition of statring a new reading
     		cond = true;			 
		}
	}
}
